@if(TempData["message"] != null){
    <div class="alert alert-warning">
        @TempData["message"]
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width" initial-scale="1.0">
	<title>BlogApp</title>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.13.1/font/bootstrap-icons.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>

	<nav class="navbar navbar-expand-lg bg-white shadow-sm">
		<div class="container">
			<a href="/posts" class="navbar-brand">
				<i class="bi bi-code"></i>IdentityApp
			</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    @if(User.Identity?.IsAuthenticated ==true)
                    {
                        if(User.IsInRole("Admin"))
                        {

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Roles" asp-action="Index">Roles</a>
                        </li>
                        }
                    }
                                       
                </ul>
                <ul class="navbar-nav ms-auto "> 
                    @if(User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link">@User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else{
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Create">Register</a>
                        </li>
                    }
                  
                   
                </ul>
            </div>
        </div>
    </nav>


	<div class="container mt-3">
		@RenderBody()
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

	</div>

	@RenderSection("Scripts", required: false)

</body>
</html>